<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="5dp"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/iv_avartar_staft"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_people_color_32" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_name_staft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên nhân viên"
                    android:textColor="@color/color_blue_mac_os"
                    android:textSize="18sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_gender_staft"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Giới tính: Nam"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_role_staft"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_black"
                        android:layout_height="wrap_content"
                        android:text="Giám đốc"
                        android:textSize="16sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_orange_mac_os"
                    android:text="Phòng ban"/>

                <TextView
                    android:id="@+id/tv_phone_staft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_purple"
                    android:text="Sô điện thoại"/>

                <TextView
                    android:id="@+id/tv_email_staft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_red"
                    android:text="email"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_note_staft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_note_line_24"
                    android:textSize="16sp"
                    android:text="Note"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ibt_item_role_remove"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_remove_color_24"
                    android:background="@color/color_transparent" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>