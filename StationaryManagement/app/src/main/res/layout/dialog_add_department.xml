<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:background="@drawable/shape_background_search_white"
        style="@style/area_layout_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_add_department_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/shape_gray_border_text"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_blue"
                android:text="Hủy"/>

        </LinearLayout>

        <EditText
            android:id="@+id/edt_dialog_add_department_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:background="@color/color_grey_background"
            android:hint="Nhập phòng ban"/>

        <EditText
            android:id="@+id/edt_dialog_add_department_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:background="@color/color_grey_background"
            android:hint="Ghi chú"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.ttn.stationarymanagement.presentation.custom_view.MButtonActionBlue
                android:id="@+id/btn_dialog_add_department_add"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:text="Thêm"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>