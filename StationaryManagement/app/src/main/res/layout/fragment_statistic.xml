<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_fragment_statistic_tab_layout"
            android:background="@color/color_white"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:tabTextColor="@color/color_black"
            app:tabSelectedTextColor="@color/color_blue_mac_os">
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_fragment_statistic_view_paper"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="1dp"/>


    </LinearLayout>



</RelativeLayout>