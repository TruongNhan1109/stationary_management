<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/area_layout_content"
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_search_white"
        android:minHeight="200dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_add_role_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="5dp"
                android:background="@drawable/shape_gray_border_text"
                android:text="@string/cancel"
                android:textColor="@color/color_blue"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_dialog_add_role_role"
            style="@style/style_text_box_quare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:hint="@string/enter_role"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <com.ttn.stationarymanagement.presentation.custom_view.MButtonActionBlue
                android:id="@+id/btn_dialog_add_role_add"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/state_background_button_blue"
                android:text="@string/add"
                android:textColor="@color/color_white" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>