<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/area_layout_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_show_detail_product_name_product"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/color_black"
                android:text="Tên sản phẩm"
                android:paddingHorizontal="5dp"
                android:paddingVertical="10dp"/>

            <ImageButton
                android:id="@+id/ibt_dialog_show_detail_product_close"
                android:layout_width="32dp"
                android:background="@color/color_transparent"
                android:src="@drawable/ic_close_blue_24"
                android:layout_height="32dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_grey"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/area_layout_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_dialog_show_detail_product_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="250dp"/>

                    <TextView
                        android:id="@+id/tv_dialog_show_detail_product_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textColor="@color/color_black"
                        android:layout_alignParentRight="true"
                        android:text="10"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_dialog_show_detail_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/color_red"
                    android:text="Đơn giá: 50000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_grey_background"
                    android:paddingVertical="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dialog_show_detail_product_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_black"
                        android:text="Đơn vị: Giá"
                        android:textSize="16sp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/color_grey_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_dialog_show_detail_product_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú"
                        android:paddingVertical="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/color_black"/>

                </LinearLayout>







            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</RelativeLayout>