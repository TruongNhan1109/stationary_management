<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingVertical="8dp"
            android:gravity="center_vertical"
            android:background="@color/color_white"
            android:paddingHorizontal="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_bag_color_32"/>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_department_name_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/color_orange"
                    android:text="@string/TenPB"/>

                <TextView
                    android:id="@+id/tv_item_department_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:text="@string/NoiDungGhiChuPB"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ibt_item_department_remove"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_remove_color_24"
                android:background="@color/color_transparent"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>